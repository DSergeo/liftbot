# Копіюйте цей файл як .env та заповніть своїми значеннями

# Flask секретний ключ (згенеруйте новий для продакшн)
FLASK_SECRET_KEY=your-secret-key-here
SESSION_SECRET=your-session-secret-here

# Telegram Bot токен (отримайте від @BotFather)
TELEGRAM_TOKEN=your-telegram-bot-token

# База даних (залиште як є для SQLite)
DATABASE_URL=sqlite:///requests.db

# Режим роботи
FLASK_ENV=production
FLASK_DEBUG=False

# Порт для запуску (опціонально)
PORT=5000

# Логування
LOG_LEVEL=INFO